<div class="link <%= link.read %>" data-link-id=<%= link.id %>>
  <%= link_to "Edit", edit_link_path(link) %>
  <h3>Title: <%= link.title %></h3>
  URL: <%= link.url %><br>
  <div class="read-status">
    Read: <%= link.read %><br>
  </div>
  <% if link.read == false %>
  <div class="read-links">
    <div class="mark-as-read">
      <%= link_to "Mark as Read", "/" %>
    </div>
    <% else %>
    <div class="mark-unread">
      <%= link_to "Mark as Unread", "/" %>
    </div>
    <% end %>
  </div>
</div>

