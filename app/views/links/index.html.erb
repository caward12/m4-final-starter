<% if current_user %>
<%= link_to "Sign Out", logout_path  %>
<% else %>
<%= link_to "Sign Up", new_user_path  %>
<%= link_to "Sign In", login_path %>
<% end %>

<div class="new-link">
  <%= render partial: "form" %>
</div>
<hr>
<div class="filter">
  <h3>Filters</h3>
  Filter: <input type="text" class="filter-links" id="q" placeholder="Search By Title or URL">


  <%= link_to "Show Read" , "/", class: "show-read"%> &nbsp &nbsp
  <%= link_to "Show Unread" , "/", class: "show-unread"%>
  <hr>
</div>

<h2>My Links</h2>
<div class="links">
  <% @links.each do |link| %>
  <%= render partial: 'link', locals: {link: link, hot_reads: @hot_reads} %>
  <% end %>
</div>
