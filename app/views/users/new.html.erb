<h2>Create a new Account</h2>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <%= @user.errors.full_messages.each do |message| %>
    <p><%= message %></p>
    <% end %>
  <% end %>
  <br><br>
  <%= f.label :email %>
  <%= f.text_field :email %>
<br><br>
  <%= f.label :password %>
  <%= f.password_field :password %>
<br><br>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
<br><br>
  <%= f.submit "Register", class: "new-account" %>

<% end %>