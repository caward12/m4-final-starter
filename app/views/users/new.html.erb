<h2>Create a new Account</h2>
<%= form_for @user do |f| %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password :password %>

  <%= f.label :password_confirmation %>
  <%= f.password :password_confirmation %>

  <%= f.submit "Register", class: "new-account" %>
  
<% end %>